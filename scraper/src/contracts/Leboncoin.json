{
  "itemSelector": "li[itemtype=\"http://schema.org/Offer\"]",
  "attributes": {
    "name": {
      "type": "text",
      "selector": "[itemprop=\"name\"]"
    },
    "price": {
      "type": "digit",
      "selector": "[itemprop=\"price\"]"
    },
    "description": {
      "type": "text",
      "selector": "[itemprop=\"availableAtOrFrom\"]"
    },
    "size": {
      "type": "number",
      "selector": "[itemprop=\"name\"]"
    },
    "link": {
      "type": "link",
      "selector": "> a",
      "attribute": "href"
    },
    "photo": {
      "type": "link",
      "selector": "img",
      "attribute": "src"
    }
  }
}