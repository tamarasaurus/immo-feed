{
    "compilerOptions": {
        "allowJs": false,
        "target": "es6",
        "lib": [
            "es2017",
            "es5",
            "es6",
            "es2015.promise",
            "dom"
        ],
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "strictPropertyInitialization": false
    },
    "include": [
       "server.ts",
       "routes/**/*.ts",
       "index.ts",
       "postgres.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
